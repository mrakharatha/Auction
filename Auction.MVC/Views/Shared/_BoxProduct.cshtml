@model Auction.Domain.Models.Product
<div class="col-sm-10 mb-5 col-md-6 col-lg-4">
    <div class="auction-item-2">
        <div class="auction-thumb">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.ProductId"><img src="@Model.Image" alt="jewelry"></a>
        </div>
        <div class="auction-content">
            <h6 class="title text-center">
                <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.ProductId">@Model.ProductName</a>
            </h6>
            <div class="bid-area">
                <div class="bid-amount col-12">
                    <div class="icon">
                        <i class="flaticon-auction"></i>
                    </div>
                    <div class="amount-content">
                        <div class="current">مبلغ پیشنهادی</div>
                        <div class="amount">@Model.Price.ToString("#,0") تومان</div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.ProductId" class="custom-button">پیشنهاد دهید</a>
            </div>
        </div>
    </div>
</div>
